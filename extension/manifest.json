{
    "manifest_version": 3,
    "name": "nextExtension",
    "description": "next extension",
    "version": "1.0",
    "permissions": [ "activeTab", "scripting", "contextMenus", "tabs", "storage"],
    "host_permissions": [ "https://*.com/*"],
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_security_policy": {
        "extension_pages": "script-src 'self';"
    },
    "options_page": "dist/options.html",
    "action": {
        "default_title": "nextExtension",
        "default_popup": "dist/popup.html"
    },
    "background": {
        "service_worker": "service-worker.js"
    },
    "web_accessible_resources": [
        {
          "resources": ["inject-script.js", "icons/icon38.png"],
          "matches": ["https://*.com/*"]
        }
    ],
    "content_scripts": [
        {
          "js": ["content-script.js"],
          "matches": [
            "https://*.com/*"
          ]
        }
    ]
}